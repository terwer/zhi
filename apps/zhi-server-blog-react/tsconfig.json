{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "outDir": "./lib",
    "paths": [
      {
        "~/*": "./*",
      }
    ]
  },
  "include": ["env.d.ts", "**/*.ts", "**/**/*.ts", "**/*.spec.ts", "**/**/*.spec.ts", "**/*.tsx", "**/**/*.tsx"],
  "exclude": ["node_modules"]
}
