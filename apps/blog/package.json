{
  "name": "zhi-blog",
  "version": "0.0.1",
  "description": "a simple blog for siyuan-note",
  "type": "module",
  "scripts": {
    "watch:css": "stylus --watch blog.styl --out ./public/blog.css",
    "build": "pnpm build:css && pnpm build:js",
    "build:css": "stylus --compress blog.styl --out ./public/blog.css",
    "build:js": "nuxt build",
    "dev": "pnpm build:css && nuxt dev",
    "generate": "pnpm build:css && nuxt generate",
    "generate:vercel": "pnpm build:css && BUILD_TYPE=vercel nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "package:vercel": "bash package.sh",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "lintcss": "stylelint *.styl --fix",
    "lintcss:fix": "stylelint *.styl --fix",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@nuxt/content": "^2.5.2",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nuxt": "^3.2.3",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-stylus": "^0.18.0",
    "stylus": "^0.59.0",
    "typescript": "^5.0.3",
    "vue-tsc": "^1.2.0"
  },
  "dependencies": {
    "zhi-common": "^1.0.7"
  },
  "keywords": [
    "zhi",
    "blog"
  ],
  "repository": "terwer/zhi",
  "homepage": "https://blog.terwer.space",
  "author": "terwer",
  "license": "GPL"
}
