{
  "name": "zhi-cli",
  "version": "1.3.1",
  "description": "a tool for generating zhi framework related projects",
  "type": "module",
  "bin": {
    "zhi-cli": "dist/index.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": "terwer/zhi-cli",
  "homepage": "https://github.com/terwer/zhi/tree/main/apps/zhi-cli",
  "author": "terwer",
  "license": "GPL",
  "keywords": [
    "zhi",
    "cli",
    "zhi-cli",
    "command"
  ],
  "scripts": {
    "dev": "zhi-build --watch",
    "build": "zhi-build --production && npm link",
    "test": "zhi-cli",
    "lint": "eslint 'src/**/*.{ts,js}' --fix",
    "doc": "../../packages/api-docs/node_modules/.bin/api-extractor run --local --verbose",
    "md": "../../packages/api-docs/node_modules/.bin/api-documenter markdown -i temp -o ../zhi-docs/src/api/zhi-cli && pnpm mdfix",
    "mdfix": "pnpm mdfmt && rm ../zhi-docs/src/api/zhi-cli/index.md",
    "mdfmt": "echo '---\ntitle: zhi-cli\n---' | cat - ../zhi-docs/src/api/zhi-cli/index.md > ../zhi-docs/src/api/zhi-cli/README.md"
  },
  "devDependencies": {
    "@types/git-clone": "^0.2.0",
    "api-docs": "workspace:*",
    "esbuild-config-custom": "workspace:*",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "enquirer": "^2.3.6",
    "fs-extra": "^11.1.1",
    "git-clone": "^0.2.0",
    "handlebars": "^4.7.7",
    "zhi-log": "workspace:*"
  }
}
