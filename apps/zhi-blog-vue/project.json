{
  "name": "zhi-blog-vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/zhi-blog-vue/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/zhi-blog-vue"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "zhi-blog-vue:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "zhi-blog-vue:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "zhi-blog-vue:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "zhi-blog-vue:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "zhi-blog-vue:build:development"
        },
        "production": {
          "buildTarget": "zhi-blog-vue:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/apps/zhi-blog-vue"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/zhi-blog-vue"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/zhi-blog-vue/**/*.ts"]
      }
    }
  }
}
