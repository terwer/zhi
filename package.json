{
  "name": "zhi",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "localBuild": "turbo run localBuild",
    "staticBuild": "turbo run staticBuild",
    "dockerBuild": "turbo run dockerBuild",
    "siyuanBuild": "turbo run siyuanBuild",
    "nodeBuild": "turbo run nodeBuild",
    "vercelBuild": "turbo run vercelBuild",
    "graph": " turbo run build --graph=dependency-graph.png",
    "preview": "turbo run preview",
    "doc": "turbo run doc",
    "md": "turbo run md",
    "apidev": "pnpm build && pnpm doc && pnpm md && turbo run apidev --F zhi-docs",
    "apibuild": "pnpm build && pnpm doc && pnpm md && turbo run apibuild --F zhi-docs",
    "prepare": "is-ci || husky install",
    "cz": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "commitizenEmoji": {}
  },
  "devDependencies": {
    "turbo": "^1.9.3",
    "eslint-config-custom": "workspace:*"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1"
}