{
  "name": "zhi",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "doc": "turbo run doc",
    "md": "turbo run md",
    "apidev": "pnpm build && pnpm doc && pnpm md && turbo run apidev --filter zhi-docs",
    "apibuild": "pnpm build && pnpm doc && pnpm md && turbo run apibuild --filter zhi-docs"
  },
  "devDependencies": {
    "turbo": "^1.9.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1"
}
