{
  "name": "zhi",
  "version": "0.0.0",
  "description": "A siyuan-note theme with plugin and blog bundled",
  "scripts": {
    "dependency": "python scripts/dependency.py",
    "dev:theme": "python scripts/dev.py --theme",
    "dev:blog": "python scripts/dev.py --blog",
    "build": "python scripts/build.py",
    "build:common": "python scripts/build.py --common",
    "build:theme": "python scripts/build.py --theme",
    "build:blog": "python scripts/build.py --blog",
    "docs": "echo 'docs'",
    "ci": "pnpm dependency && pnpm build",
    "package": "pnpm ci && pnpm docs"
  },
  "devDependencies": {
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-stylus": "^0.18.0",
    "stylus": "^0.59.0"
  },
  "keywords": [
    "zhi",
    "theme",
    "blog"
  ],
  "repository": "terwer/zhi",
  "homepage": "https://blog.terwer.space",
  "author": "terwer",
  "license": "GPL",
  "dependencies": {
    "zhi-sdk": "1.0.11"
  }
}
