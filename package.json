{
  "name": "zhi",
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "cz": "git-cz",
    "predoc": "pnpm build -F zhi-lib-base && pnpm build -F zhi-device && pnpm build -F zhi-env && pnpm build -F zhi-log && pnpm build -F zhi-common && pnpm build -F zhi-blog-api"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@terwer/commit-config-custom": "workspace:*",
    "@terwer/eslint-config-custom": "workspace:*",
    "turbo": "^1.10.1"
  }
}
