{
  "name": "zhi",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "clientDev": "turbo run clientDev",
    "serverDev": "turbo run serverDev",
    "nodeDev": "turbo run nodeDev",
    "build": "turbo run build",
    "dockerBuild": "turbo run dockerBuild",
    "siyuanBuild": "turbo run siyuanBuild",
    "clientBuild": "turbo run clientBuild",
    "staticBuild": "turbo run staticBuild",
    "serverBuild": "turbo run serverBuild",
    "localBuild": "turbo run localBuild",
    "nodeBuild": "turbo run nodeBuild",
    "vercelBuild": "turbo run vercelBuild",
    "graph": " turbo run build --graph=dependency-graph.png",
    "preview": "turbo run preview",
    "doc": "turbo run doc",
    "md": "turbo run md",
    "apidev": "pnpm build && pnpm doc && pnpm md && turbo run apidev --filter zhi-docs",
    "apibuild": "pnpm build && pnpm doc && pnpm md && turbo run apibuild --filter zhi-docs",
    "prepare": "is-ci || husky install",
    "commitinit": "npx husky add .husky/commit-msg  'npx --no -- commitlint --edit ${1}'",
    "cz": "git-cz",
    "commit": "commit"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "commitizenEmoji": {}
  },
  "devDependencies": {
    "turbo": "^1.9.3",
    "eslint-config-custom": "workspace:*"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1"
}